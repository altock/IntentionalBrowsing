{
  "manifest_version": 3,
  "name": "Intentional Browsing",
  "version": "0.1.0",
  "description": "Block the feed. Keep the signal. Visit on purpose.",
  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://twitter.com/*",
    "*://www.twitter.com/*",
    "*://x.com/*",
    "*://www.x.com/*",
    "*://mobile.twitter.com/*",
    "*://mobile.x.com/*",
    "*://reddit.com/*",
    "*://www.reddit.com/*",
    "*://old.reddit.com/*",
    "*://new.reddit.com/*",
    "*://youtube.com/*",
    "*://www.youtube.com/*",
    "*://m.youtube.com/*",
    "*://instagram.com/*",
    "*://www.instagram.com/*",
    "*://facebook.com/*",
    "*://www.facebook.com/*",
    "*://m.facebook.com/*",
    "*://linkedin.com/*",
    "*://www.linkedin.com/*",
    "*://tiktok.com/*",
    "*://www.tiktok.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "ui/popup.html",
    "default_title": "Intentional Browsing"
  },
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*",
        "*://www.twitter.com/*",
        "*://x.com/*",
        "*://www.x.com/*",
        "*://mobile.twitter.com/*",
        "*://mobile.x.com/*"
      ],
      "js": ["content/twitter.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://reddit.com/*",
        "*://www.reddit.com/*",
        "*://old.reddit.com/*",
        "*://new.reddit.com/*"
      ],
      "js": ["content/reddit.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://youtube.com/*",
        "*://www.youtube.com/*",
        "*://m.youtube.com/*"
      ],
      "js": ["content/youtube.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://instagram.com/*",
        "*://www.instagram.com/*"
      ],
      "js": ["content/instagram.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://facebook.com/*",
        "*://www.facebook.com/*",
        "*://m.facebook.com/*"
      ],
      "js": ["content/facebook.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://linkedin.com/*",
        "*://www.linkedin.com/*"
      ],
      "js": ["content/linkedin.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://tiktok.com/*",
        "*://www.tiktok.com/*"
      ],
      "js": ["content/tiktok.js"],
      "run_at": "document_start"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "twitter_rules",
        "enabled": true,
        "path": "rules/twitter.json"
      },
      {
        "id": "reddit_rules",
        "enabled": true,
        "path": "rules/reddit.json"
      },
      {
        "id": "youtube_rules",
        "enabled": true,
        "path": "rules/youtube.json"
      },
      {
        "id": "instagram_rules",
        "enabled": true,
        "path": "rules/instagram.json"
      },
      {
        "id": "facebook_rules",
        "enabled": false,
        "path": "rules/facebook.json"
      },
      {
        "id": "linkedin_rules",
        "enabled": false,
        "path": "rules/linkedin.json"
      },
      {
        "id": "tiktok_rules",
        "enabled": true,
        "path": "rules/tiktok.json"
      }
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["ui/blocked.html", "ui/blocked.css", "ui/blocked.js"],
      "matches": ["*://*/*"]
    }
  ]
}
